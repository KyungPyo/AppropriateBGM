<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SpinnerColor" >
        <item name="android:textColor">@color/list_press</item>
    </style>
    
    <style name="PreferencesTheme">
        <item name="android:background">#00000000</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="android:listViewStyle">@style/listviewPreferences</item>
    </style>
    
    <style name="listviewPreferences" parent="@android:style/Widget.ListView">
        <item name="android:background">#FFFFFF</item>
        <item name="android:cacheColorHint">#00000000</item>
    </style>

    <style name="settingTitle">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/mainActionBar</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="settingBigTitle">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">7dp</item>
    </style>

    <style name="settingSummary">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textStyle">italic</item>
    </style>


</resources>
